<div id="<%= dom_id game %>">
  <div class="wa-stack wa-gap-0" style="background-color: #2d5a3d; border-radius: 20px; box-shadow: 0 10px 16px rgba(0, 0, 0, 0.15);">
    <div class="wa-span-grid ">
      <div><center><%= image_tag "red.svg", size: "50" %></center></div>
    </div>
    <div class="wa-span-grid wa-heading-xl" style="text-align: center;">
      <div style="border: 2px solid #ffd700; border-radius: 8px; padding: 12px 16px; display: inline-block; color: var(--wa-color-yellow-95);">Ride the Bus</div>
    </div>
    <div class="wa-grid wa-gap-0 wa-body-l" style="--min-column-size: 200px; text-align: center; color: var(--wa-color-yellow-95);"">
      <div class="wa-body-l" style="font-weight: bold;">Round 1 <%= tag.br %> Red or Black <%= tag.br %> 2x</div>
      <div class="wa-body-l" style="font-weight: bold;">Round 2 <%= tag.br %> Higher or Lower <%= tag.br %> 3x</div>
      <div class="wa-body-l" style="font-weight: bold;">Round 3 <%= tag.br %> Inside or Outside <%= tag.br %> 4x</div>
      <div class="wa-body-l" style="font-weight: bold;">Round 4 <%= tag.br %> Suit <%= tag.br %> 20x</div>
    </div>
    <div class="wa-grid wa-gap-0" style="--min-column-size: 200px; text-align: center;">
      <div><%= render "card", value: @card_value, suit: @card_suit %></div>
      <div><%# image_tag "hearts_queen.svg", size: "50" %></div>
      <div><%# image_tag "spades_ace.svg", size: "50" %></div>
      <div><%# image_tag "clubs_8.svg", size: "50" %></div>
    </div>
    <div class="wa-grid wa-gap-0" style="--min-column-size: 50px;">
      <div><center><%= @game.user_id %><br /> Bet: $10</center></div>
    </div>
  </div>
  <% if false %>
    <%= "Game ID: #{game.id}" %>
    <%= tag.br %>
    <%= "User ID: #{game.user_id}" %>
    <%= tag.br %>
    <%= "Turn: #{game.current_turn}" %>
    <%= tag.br %>
    <%= "Status: #{game.status}" %>
    <%= tag.br %>
      <% if @turn %>
        <%= "Card: #{@turn.card}" %>
        <%= render "card", value: @card_value, suit: @card_suit %>
      <% else %>
        <%= "No cards yet" %>
      <% end %>
  <% end %>
</div>
